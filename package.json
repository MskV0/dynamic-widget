{
  "name": "msk-clock-widget",
  "version": "1.0.0",
  "main": "main.js",
  "description": "A glowing clock and weather widget",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.msk.clockwidget",
    "productName": "MSK Clock Widget",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ]
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "auto-launch": "^5.0.6"
  }
}
